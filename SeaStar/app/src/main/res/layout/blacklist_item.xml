<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_bg">

    <ImageView
        android:id="@+id/black_head"
        android:layout_width="36sp"
        android:layout_height="36sp"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dip"
        android:src="@drawable/rp_default_head" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="36sp"
        android:layout_margin="10dip"
        android:layout_toRightOf="@id/black_head"
        android:orientation="vertical">

        <TextView
            android:id="@+id/black_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Android1群"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/black_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="群组id:49"
            android:textSize="10sp" />


    </LinearLayout>


    <Button
        android:id="@+id/remove_blacklist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/de_pic_action_btn"
        android:minHeight="1dp"
        android:minWidth="1dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="移除黑名单"
        android:textColor="@color/de_pic_default_text_color"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/black_head"
        android:background="@color/text_line_color" />

</RelativeLayout>
